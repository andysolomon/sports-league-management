{
  "trailingComma": "none",
  "plugins": [
    "prettier-plugin-apex",
    "@prettier/plugin-xml"
  ],
  "singleQuote": true,
  "tabWidth": 4,
  "printWidth": 120,
  "overrides": [
      {
          "files": "**/lwc/**/*.html",
          "options": { "parser": "lwc" }
      },
      {
          "files": "*.{cmp,page,component}",
          "options": { "parser": "html" }
      },
      {
          "files": "*.{cls,trigger}",
          "options": { "parser": "apex" }
      }
  ]
}